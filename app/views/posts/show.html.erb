<% if @post.user %>
  <div class="post" id="post-<%= @post.id %>">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 well">
        <%= render @post, remote: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 well">
        <h4>Comments</h4>
        <hr>
        <%= render 'comments/form', commentable: @post %>
        <br>
        <div class="comments">
          <%= render(@comments) || render('includes/no_resources', resources: 'Comments') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
