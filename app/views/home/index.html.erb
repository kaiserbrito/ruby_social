<div class="row">
  <div class="col-lg-3">
    <%= render 'includes/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render ('includes/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/includes/activity') %>
      <% end %>
    </div>
    <%= render 'includes/paginate', resources: '@activities' %>
  </div>
  <div class="col-lg-3">
    <%= render 'includes/links' %>
  </div>
</div>
